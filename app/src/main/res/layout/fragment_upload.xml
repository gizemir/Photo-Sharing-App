<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UploadFragment">

    <ImageView
        android:id="@+id/imageViewUploadImage"
        android:layout_width="263dp"
        android:layout_height="238dp"
        android:layout_marginTop="25dp"
        android:onClick="uploadImage"
        android:src="@drawable/select_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="255dp"
        android:layout_height="64dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Enter your comment"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewUploadImage"
        app:layout_constraintStart_toStartOf="@+id/imageViewUploadImage"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUploadImage" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="136dp"
        android:layout_height="62dp"
        android:layout_marginTop="65dp"
        android:onClick="upload"
        android:text="Upload"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextComment"
        app:layout_constraintStart_toStartOf="@+id/editTextComment"
        app:layout_constraintTop_toBottomOf="@+id/editTextComment" />
</androidx.constraintlayout.widget.ConstraintLayout>